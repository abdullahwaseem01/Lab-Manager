@model OntarioTechUniversity.Models.SafetyDataSheet

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete this?</h1>
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfIssue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfIssue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RevisionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RevisionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.LocationID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            <a href="@Html.DisplayFor(model => model.Url)">View</a>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="container" style=" display: flex; flex-direction:row; height:39px; padding-left:0px;">
            <div class="form-group .col-6 .col-md-4">
                <input type="hidden" asp-for="Name" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-secondary col" style="margin-left:12px;">Back</a>
            </div>
        </div>
    </form>
</div>
